{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      // Define alias's for easy importing
      // Also need to define the same alias in webpack config file
      "core/*": [ "./ClientApp/src/app/core/*" ]
    },
    "lib": [ "es6", "dom" ],
    "types": [ "node", "webpack", "webpack-env", "jasmine", "karma" ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [ "bin", "node_modules" ],
  "atom": { "rewriteTsconfig": false }
}
